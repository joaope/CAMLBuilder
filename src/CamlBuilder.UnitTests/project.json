{
    "buildOptions": {
        "keyFile": "../../security/CamlBuilder.snk"
    },

    "configurations": {
        "Debug": {
            "buildOptions": {
                "define": [ "DEBUG", "TRACE" ]
            }
        },
        "Release": {
            "buildOptions": {
                "define": [ "RELEASE", "TRACE" ],
                "optimize": true
            }
        }
    },

    "commands": {
        "run-tests": "xunit.runner.dnx"
    },

    "dependencies": {
        "camlbuilder": "1.0.0-beta4",
        "xunit": "2.1.0",
        "xunit.runner.dnx": "1.0.0-rc2-build10015"
    },

    "frameworks": {
        "netcoreapp1.0": {
            "dependencies": {
                "System.Xml.XmlDocument": "4.0.1-rc2-24027",
                "System.Xml.XPath.XmlDocument": "4.0.1-rc2-24027"
            },
            "imports": [
                "dnxcore50",
                "portable-net45+win8"
            ]
        }
    }
}